@model wx_site_micc.Models.HEX001TB
@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>请假审核</title>
    <link rel="stylesheet" href="../../css/bootstrap.min.css" />
    <script type="text/javascript" src="../../js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="../../js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/signature-pad.css" />
    @*<script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-39365077-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>*@
    <script type="text/javascript">
        function cc() {
          //  var image = "";
            var image = signaturePad.toDataURL();
            
           
            document.getElementById("image").value = image;
        }
    </script>
</head>

<body>
    <div class="container">
        <hr />
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="panel-title">审核前请仔细阅读职员的请假申请</h4>
            </div>
            <div class="panel-body">
                @*  <form id="form1" action="@Url.Action("Qianming")@HttpUtility.UrlDecode("?id=")@Request.QueryString["id"]" method="post">*@
                <form id="form1" action="@Url.Action("Qianming")" method="post">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <td class="col-md-3 col-xs-4 text-right">职员工号</td>
                                <td class="col-md-9 col-xs-8 text-left">@Model.emp_no</td>
                            </tr>
                            <tr>
                                <td class="text-right">职员姓名</td>
                                <td class="text-left">@Model.emp_nm</td>
                            </tr>
                            <tr>
                                <td class="text-right">所在部门</td>
                                <td class="text-left">@Model.dept_nm</td>
                            </tr>
                            <tr>
                                <td class="text-right">请假日期</td>
                                <td class="text-left">@Model.ex_date</td>
                            </tr>
                            <tr>
                                <td class="text-right">请假类别</td>
                                <td class="text-left">@Model.dilig_nm</td>
                            </tr>
                            <tr>
                                <td class="text-right">开始时间</td>
                                <td class="text-left">@Model.ex_btime</td>
                            </tr>
                            <tr>
                                <td class="text-right">结束时间</td>
                                <td class="text-left">@Model.ex_etime</td>
                            </tr>
                            <tr>
                                <td class="text-right">合计小时</td>
                                <td class="text-left">@Model.ex_hh</td>
                            </tr>
                            <tr>
                                <td class="text-right ">请假原因</td>
                                <td class="text-left">@Model.ex_remark</td>
                            </tr>
                            <tr>
                                <td class="text-right">审核状态</td>
                                <td class="text-left">@Model.ck_flg_nm</td>
                            </tr>
                            <tr>
                                <td class="text-right ">备注信息</td>
                                <td class="text-left">
                                    @if (Model.ck_flg == "N")
                                    {
                                        <input type="text" class="form-control" name="ck_remark" />
                                    }
                                    else
                                    {
                                        @Model.ck_remark
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right text-danger">注意事项</td>
                                <td class="text-left text-danger">
                                    每个请假申请只能审核一次，无论同意还是拒绝，一旦提交后，则无法再进行修改，所以请谨慎选择。如果拒绝的话，最好请填写备注信息。
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right ">aaa</td>
                                <td class="text-left ">
                                    <input type="text" id="image" class="form-control" name="image" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <h4 class="panel-title">签字区域</h4>
                        </div>
                        <div class="panel-body">
                            <div id="signature-pad" class="m-signature-pad">
                                <div class="m-signature-pad--body">
                                    <canvas></canvas>
                                </div>
                                <div class="m-signature-pad--footer">
                                    <div class="description">
                                        <button type="button" class="btn btn-primary" data-action="clear">重 签</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.ck_flg == "N")
                    {
                        <button type="submit" class="btn btn-info col-md-3 col-xs-3" name="check" value="Y">同 意</button>
                        <div class="col-md-6 col-xs-6"></div>
                        <button type="submit" class="btn btn-info col-md-3 col-xs-3" name="check" value="R">拒 绝</button>
                       
                    }
                    else
                    {
                        <button type="submit" class="btn btn-info col-md-3 col-xs-3" name="check" value="Y" disabled="disabled">同 意</button>
                        <div class="col-md-6 col-xs-6"></div>
                        <button type="submit" class="btn btn-info col-md-3 col-xs-3" name="check" value="R" disabled="disabled">拒 绝</button>
                        <button type="submit" class="btn btn-info col-md-3 col-xs-3" id="check" name="check" value="Y" onclick="cc()">测试</button>
                    }
                </form>
               @* <button type="submit" class="btn btn-info col-md-3 col-xs-3" id="check" name="check" value="Y" onclick="cc()">测试</button>*@
            </div>
    </div>
</div>
    <script type="text/javascript" src="~/js/signature_pad.js"></script>
    <script type="text/javascript" src="~/js/app.js"></script>
</body>

</html>
